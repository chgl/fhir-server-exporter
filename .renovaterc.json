{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>chgl/.github//renovate/default"],
  "kubernetes": {
    "managerFilePatterns": ["/hack/k8s/.+\\.yaml$/"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^Dockerfile$/"],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( extractVersion=(?<extractVersion>.*?))?( versioning=(?<versioning>.*?))?\\sARG .*?_VERSION=(?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{else}}^v(?<version>.*)${{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["kubernetes"],
      "matchPackageNames": ["ghcr.io/chgl/fhir-server-exporter"],
      "pinDigests": false
    }
  ]
}
